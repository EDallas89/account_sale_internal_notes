<?xml version="1.0"?>
<odoo>
  <data>
    <!-- Purchase Order (Requests for Quotation) -->
    <record id="account_internal_notes_sale_form" model="ir.ui.view">
      <field name="name">account.internal.notes.purchase.form.view</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="priority" eval="20" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_ref']" position="after">
          <field name="internal_note" />
        </xpath>
      </field>
    </record>

    <record id="account_internal_notes_sale_tree" model="ir.ui.view">
      <field name="name">account.internal.notes.purchase.tree.view</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_tree" />
      <field name="priority" eval="20" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="before">
          <field name="internal_note" />
        </xpath>
      </field>
    </record>
  </data>
</odoo>